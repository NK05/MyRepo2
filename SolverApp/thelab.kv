<ImageExamp@GridLayout>
    cols:3
    Image:
        source:'images/cake.jpg'
        allow_stretch:True
        keep_aspect_ratio:False
    Image:
        source:'images/cake.jpg'
        allow_stretch:True
        keep_aspect_ratio:False
    Image:
        source:'images/cake.jpg'
        allow_stretch:True
        keep_ratio:False

<WidgetExamp>:
    cols:3
    ToggleButton:
        text:'OFF'
        on_state:root.on_toggle_button_state(self)
        size_hint:None,1
        width:'100dp'
    Button:
        text:'Count'
        on_press: root.on_button_click()
        disabled:root.button_disabled

    Label:
        #id:
        font_name:'fonts/lcd.ttf'
        font_size:'80dp'
        text:root.my_text
        color:1, .5, 1, 1

    Switch:
        id:my_switch
        size_hint:None,1
        width:'100dp'
        on_active:root.on_switch_state(self)

    Slider:
        id:my_slider
        min:0
        max:100
        value:50
        orientation:'vertical'
        on_value:root.on_slider_value(self)
        disabled:not my_switch.active
    
    BoxLayout:
        orientation:'vertical'
        Label:
            text:str(int(my_slider.value))
        
        ProgressBar:
            max:100
            value:my_slider.value
    
    TextInput:
        id:my_input
        size_hint:None,1
        width:'100dp'
        text:'Jesus is life'
        multiline:False
        on_text_validate:root.on_text_validate(self)

    Label:
        text:root.text_input   

<PageLayoutExamp@PageLayout>:
    MainWidget:
    BoxLayoutExamp:
    StackLayoutExamp:
    AnchorLayoutExamp:

<ScrollViewExamp@ScrollView>:
    StackLayoutExamp:
        size_hint: 1,None
        height: self.minimum_height

